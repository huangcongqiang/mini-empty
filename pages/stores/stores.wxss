/* pages/stores/stores.wxss */
.container {
  min-height: 100vh;
  background: #0f0f1a;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.header {
  padding: 40rpx 40rpx 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #a0a0c0;
}

/* 加载中 */
.loading {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #667eea;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #a0a0c0;
}

/* 店铺列表 */
.store-list {
  flex: 1;
  padding: 0 30rpx;
}

.store-card {
  display: flex;
  align-items: center;
  background: #1a1a2e;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.store-card:active {
  border-color: rgba(102, 126, 234, 0.5);
  background: rgba(102, 126, 234, 0.1);
}

.store-avatar {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  flex-shrink: 0;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.store-info {
  flex: 1;
  margin-left: 24rpx;
  overflow: hidden;
}

.store-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.store-desc {
  font-size: 26rpx;
  color: #a0a0c0;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.store-meta {
  display: flex;
  gap: 20rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #667eea;
}

.store-arrow {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #a0a0c0;
  border-right: 3rpx solid #a0a0c0;
  transform: rotate(45deg);
}

/* 空状态 */
.empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #a0a0c0;
}

.empty-text {
  font-size: 32rpx;
  margin: 30rpx 0;
}

.refresh-btn {
  width: 240rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 40rpx;
  color: #fff;
  font-size: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 退出登录 */
.logout-area {
  padding: 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 44rpx;
  color: #a0a0c0;
  font-size: 30rpx;
}

