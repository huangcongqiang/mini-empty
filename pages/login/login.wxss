/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%);
  padding: 0 60rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.1;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
  bottom: 200rpx;
  left: -150rpx;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  background: #667eea;
  bottom: -50rpx;
  right: 50rpx;
}

/* Logo 区域 */
.logo-area {
  padding-top: 200rpx;
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-icon {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  color: #fff;
}

.app-name {
  font-size: 52rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: #a0a0c0;
}

/* 登录表单 */
.login-form {
  flex: 1;
}

.input-group {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 16rpx;
  padding: 0 30rpx;
  height: 100rpx;
  margin-bottom: 30rpx;
  border: 2rpx solid transparent;
  transition: border-color 0.3s;
}

.input-group:focus-within {
  border-color: rgba(102, 126, 234, 0.5);
}

.input-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #667eea;
  margin-right: 20rpx;
}

.lock-icon {
  width: 28rpx;
  height: 34rpx;
  border: 3rpx solid currentColor;
  border-radius: 6rpx;
  position: relative;
}

.lock-icon::before {
  content: '';
  position: absolute;
  top: -14rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 16rpx;
  height: 14rpx;
  border: 3rpx solid currentColor;
  border-bottom: none;
  border-radius: 10rpx 10rpx 0 0;
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #fff;
}

.placeholder {
  color: #666;
}

.toggle-password {
  padding: 10rpx;
  font-size: 24rpx;
  color: #667eea;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  border: none;
  margin-top: 40rpx;
}

.login-btn.disabled {
  opacity: 0.5;
}

/* 底部 */
.footer {
  padding: 60rpx 0;
  padding-bottom: calc(60rpx + env(safe-area-inset-bottom));
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #666;
}

.footer-link {
  font-size: 24rpx;
  color: #667eea;
}

