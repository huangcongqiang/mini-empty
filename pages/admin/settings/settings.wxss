/* pages/admin/settings/settings.wxss */
.container { min-height: 100vh; background: #f5f5f5; padding: 20rpx; }

.section { margin-bottom: 30rpx; }
.section-title { font-size: 28rpx; color: #666; margin-bottom: 16rpx; padding-left: 10rpx; }

.form-card { background: #fff; border-radius: 16rpx; padding: 0 30rpx; }
.form-item { padding: 30rpx 0; border-bottom: 1rpx solid #eee; }
.form-item:last-child { border-bottom: none; }
.form-label { display: block; font-size: 26rpx; color: #666; margin-bottom: 12rpx; }
.form-input { font-size: 30rpx; color: #333; padding: 16rpx; background: #f5f5f5; border-radius: 12rpx; }
.form-value { font-size: 30rpx; color: #333; padding: 16rpx 0; }
.form-hint { font-size: 22rpx; color: #999; margin-top: 8rpx; display: block; }

.link-card {
  background: #fff; border-radius: 16rpx; padding: 24rpx;
  display: flex; justify-content: space-between; align-items: center;
}
.link-text { flex: 1; font-size: 26rpx; color: #7c3aed; word-break: break-all; }
.link-action { display: flex; align-items: center; gap: 8rpx; color: #7c3aed; font-size: 26rpx; margin-left: 20rpx; }
.link-hint { font-size: 22rpx; color: #999; margin-top: 16rpx; padding-left: 10rpx; }

.save-section { padding: 40rpx 0; }
.save-btn { background: #7c3aed; color: #fff; border: none; padding: 28rpx 0; border-radius: 50rpx; font-size: 30rpx; }

