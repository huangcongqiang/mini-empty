/* pages/admin/products/products.wxss */
.container { min-height: 100vh; background: #f5f5f5; padding-bottom: 120rpx; }

.category-bar {
  background: #fff; white-space: nowrap; padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.cat-item {
  display: inline-block; padding: 12rpx 24rpx; margin-right: 16rpx;
  background: #f5f5f5; border-radius: 30rpx; font-size: 26rpx; color: #666;
}
.cat-item.active { background: #7c3aed; color: #fff; }

.loading { padding: 100rpx; text-align: center; color: #999; }
.loading text { display: block; margin-top: 20rpx; }

.product-list { padding: 20rpx; }
.product-card {
  background: #fff; border-radius: 16rpx; padding: 20rpx;
  display: flex; align-items: center; margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.product-image { width: 120rpx; height: 120rpx; border-radius: 12rpx; background: #f5f5f5; }
.product-info { flex: 1; margin-left: 20rpx; }
.product-name { font-size: 28rpx; font-weight: 500; color: #333; }
.product-category { font-size: 24rpx; color: #999; margin-top: 8rpx; }
.product-status { font-size: 22rpx; margin-top: 8rpx; padding: 4rpx 12rpx; border-radius: 20rpx; display: inline-block; }
.product-status.active { background: #dcfce7; color: #16a34a; }
.product-status.inactive { background: #fee2e2; color: #dc2626; }

.product-actions { display: flex; gap: 16rpx; }
.action-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}
.action-btn.edit { background: #ede9fe; }
.action-btn.delete { background: #fee2e2; }
.action-icon {
  width: 32rpx;
  height: 32rpx;
}

.empty { text-align: center; padding: 100rpx 40rpx; color: #999; }
.empty text { display: block; margin-top: 20rpx; }
.empty-hint { font-size: 24rpx; margin-top: 10rpx; }

.add-btn {
  position: fixed; right: 40rpx; bottom: 60rpx;
  width: 100rpx; height: 100rpx; background: #7c3aed;
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
  color: #fff; box-shadow: 0 8rpx 24rpx rgba(124,58,237,0.4);
}

/* 弹窗 */
.modal {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}
.modal-content {
  background: #fff;
  width: 100%;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}
.modal-title { font-size: 32rpx; font-weight: bold; }
.modal-close { font-size: 48rpx; color: #999; line-height: 1; }
.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
  box-sizing: border-box;
  width: 100%;
}
.modal-footer {
  padding: 20rpx 30rpx 40rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
}
.btn-cancel, .btn-confirm {
  flex: 1;
  padding: 24rpx 0;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}
.btn-cancel { background: #f5f5f5; color: #666; }
.btn-confirm { background: #7c3aed; color: #fff; }

.form-item { margin-bottom: 30rpx; }
.form-label { display: block; font-size: 26rpx; color: #666; margin-bottom: 12rpx; }
.form-input {
  background: #f5f5f5;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 88rpx;
  line-height: 1.4;
}
.form-textarea {
  background: #f5f5f5;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  width: 100%;
  min-height: 200rpx;
  box-sizing: border-box;
  line-height: 1.4;
}
.form-picker {
  background: #f5f5f5;
  padding: 24rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 88rpx;
  box-sizing: border-box;
}
.picker-arrow { width: 16rpx; height: 16rpx; border-right: 4rpx solid #999; border-bottom: 4rpx solid #999; transform: rotate(45deg); }

.image-picker {
  width: 200rpx; height: 200rpx; background: #f5f5f5;
  border-radius: 16rpx; display: flex; flex-direction: column;
  align-items: center; justify-content: center; color: #999;
  border: 2rpx dashed #ddd;
}
.image-picker text { font-size: 24rpx; margin-top: 10rpx; }
.preview-image { width: 100%; height: 100%; border-radius: 16rpx; }

