/* pages/admin/admin.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 60rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.store-info { display: flex; align-items: center; gap: 24rpx; }
.store-icon {
  width: 80rpx; height: 80rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 20rpx;
  display: flex; align-items: center; justify-content: center;
  color: #fff;
}
.store-name { font-size: 36rpx; font-weight: bold; color: #fff; }
.store-user { font-size: 24rpx; color: rgba(255,255,255,0.7); margin-top: 4rpx; }

.qr-btn {
  width: 80rpx; height: 80rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  color: #fff;
  border: none; padding: 0;
}

.menu-section, .quick-section { padding: 30rpx; }
.section-title { font-size: 28rpx; color: #666; margin-bottom: 20rpx; font-weight: 500; }

.menu-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 20rpx; }
.menu-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.menu-icon {
  width: 80rpx; height: 80rpx;
  border-radius: 16rpx;
  display: flex; align-items: center; justify-content: center;
  margin-bottom: 16rpx;
}
.menu-icon.purple { background: #ede9fe; color: #7c3aed; }
.menu-icon.blue { background: #dbeafe; color: #2563eb; }
.menu-icon.orange { background: #ffedd5; color: #ea580c; }
.menu-icon.green { background: #dcfce7; color: #16a34a; }
.menu-text { font-size: 30rpx; font-weight: 500; color: #333; }
.menu-desc { font-size: 24rpx; color: #999; margin-top: 8rpx; }

.quick-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.quick-left { display: flex; align-items: center; gap: 20rpx; color: #333; font-size: 28rpx; }
.quick-right { display: flex; align-items: center; gap: 10rpx; }
.quick-hint { font-size: 24rpx; color: #999; }
.arrow {
  width: 16rpx; height: 16rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: rotate(45deg);
}

.logout-section { padding: 40rpx 30rpx; }
.logout-btn {
  width: 100%;
  background: transparent;
  border: 2rpx solid #ff4d4f;
  color: #ff4d4f;
  font-size: 28rpx;
  padding: 24rpx 0;
  border-radius: 50rpx;
}

/* 二维码弹窗 */
.qr-modal {
  position: fixed; inset: 0;
  background: rgba(0,0,0,0.6);
  display: flex; align-items: center; justify-content: center;
  z-index: 1000;
}
.qr-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  width: 80%;
  text-align: center;
}
.qr-title { font-size: 32rpx; font-weight: bold; color: #333; }
.qr-desc { font-size: 24rpx; color: #999; margin-top: 10rpx; }
.qr-image { width: 400rpx; height: 400rpx; margin: 40rpx auto; }
.qr-save-btn {
  background: #7c3aed;
  color: #fff;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

