/* pages/admin/categories/categories.wxss */
.container { min-height: 100vh; background: #f5f5f5; padding: 20rpx; padding-bottom: 120rpx; }

.loading { padding: 100rpx; text-align: center; color: #999; }
.loading text { display: block; margin-top: 20rpx; }

.category-list { }
.category-card {
  background: #fff; border-radius: 16rpx; padding: 24rpx;
  display: flex; align-items: center; margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.category-icon { font-size: 48rpx; margin-right: 20rpx; }
.category-info { flex: 1; }
.category-name { font-size: 30rpx; font-weight: 500; color: #333; }
.category-meta { display: flex; align-items: center; gap: 16rpx; margin-top: 8rpx; }
.default-tag { font-size: 22rpx; background: #dbeafe; color: #2563eb; padding: 4rpx 12rpx; border-radius: 20rpx; }
.product-count { font-size: 24rpx; color: #999; }

.category-actions { display: flex; gap: 16rpx; }
.action-btn {
  width: 64rpx; height: 64rpx; border-radius: 50%; border: none;
  display: flex; align-items: center; justify-content: center; padding: 0;
}
.action-btn.edit { background: #ede9fe; color: #7c3aed; }
.action-btn.delete { background: #fee2e2; color: #dc2626; }

.empty { text-align: center; padding: 100rpx 40rpx; color: #999; }
.empty text { display: block; margin-top: 20rpx; }

.add-btn {
  position: fixed; right: 40rpx; bottom: 60rpx;
  width: 100rpx; height: 100rpx; background: #7c3aed;
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
  color: #fff; box-shadow: 0 8rpx 24rpx rgba(124,58,237,0.4);
}

/* 弹窗 */
.modal { position: fixed; inset: 0; background: rgba(0,0,0,0.5); display: flex; align-items: flex-end; z-index: 1000; }
.modal-content { background: #fff; width: 100%; border-radius: 32rpx 32rpx 0 0; }
.modal-header { padding: 30rpx; display: flex; justify-content: space-between; align-items: center; border-bottom: 1rpx solid #eee; }
.modal-title { font-size: 32rpx; font-weight: bold; }
.modal-close { font-size: 48rpx; color: #999; line-height: 1; }
.modal-body { padding: 30rpx; }
.modal-footer { padding: 20rpx 30rpx 40rpx; display: flex; gap: 20rpx; border-top: 1rpx solid #eee; }
.btn-cancel, .btn-confirm { flex: 1; padding: 24rpx 0; border-radius: 50rpx; font-size: 28rpx; border: none; }
.btn-cancel { background: #f5f5f5; color: #666; }
.btn-confirm { background: #7c3aed; color: #fff; }

.form-item { margin-bottom: 30rpx; }
.form-label { display: block; font-size: 26rpx; color: #666; margin-bottom: 12rpx; }
.form-input { background: #f5f5f5; padding: 24rpx; border-radius: 12rpx; font-size: 28rpx; width: 100%; box-sizing: border-box; }

.icon-picker { white-space: nowrap; padding: 10rpx 0; }
.icon-item {
  display: inline-flex; width: 80rpx; height: 80rpx;
  align-items: center; justify-content: center;
  background: #f5f5f5; border-radius: 16rpx; margin-right: 16rpx;
  font-size: 40rpx; border: 4rpx solid transparent;
}
.icon-item.active { border-color: #7c3aed; background: #ede9fe; }

