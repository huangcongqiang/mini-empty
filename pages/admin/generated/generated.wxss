/* pages/admin/generated/generated.wxss */
.container { min-height: 100vh; background: #f5f5f5; padding: 20rpx; }

.loading { padding: 100rpx; text-align: center; color: #999; }
.loading text { display: block; margin-top: 20rpx; }

.image-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 16rpx; }
.image-item {
  background: #fff; border-radius: 16rpx; overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.result-image { width: 100%; height: 300rpx; }
.image-info { padding: 16rpx; }
.image-product { display: block; font-size: 26rpx; color: #333; font-weight: 500; }
.image-time { display: block; font-size: 22rpx; color: #999; margin-top: 8rpx; }

.empty { text-align: center; padding: 100rpx 40rpx; color: #999; }
.empty text { display: block; margin-top: 20rpx; }
.empty-hint { font-size: 24rpx; margin-top: 10rpx; }

