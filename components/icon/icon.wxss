/* components/icon/icon.wxss */
.icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  color: currentColor;
}

.icon-inner {
  width: 100%;
  height: 100%;
  position: relative;
}

/* 相机图标 */
.icon-camera .camera-body {
  width: 70%;
  height: 50%;
  border: 3rpx solid currentColor;
  border-radius: 6rpx;
  position: absolute;
  bottom: 15%;
  left: 15%;
}
.icon-camera .camera-lens {
  width: 28%;
  height: 28%;
  border: 3rpx solid currentColor;
  border-radius: 50%;
  position: absolute;
  top: 38%;
  left: 36%;
}

/* 切换图标 */
.icon-switch .switch-arrow {
  width: 55%;
  height: 55%;
  border: 3rpx solid currentColor;
  border-radius: 50%;
  border-right-color: transparent;
  border-bottom-color: transparent;
  position: absolute;
  top: 22%;
  left: 22%;
  transform: rotate(-45deg);
}
.icon-switch .switch-arrow::after {
  content: '';
  position: absolute;
  top: -3rpx;
  right: -3rpx;
  border: 6rpx solid transparent;
  border-bottom: 8rpx solid currentColor;
  transform: rotate(45deg);
}

/* 相册图标 */
.icon-album .album-frame {
  width: 70%;
  height: 55%;
  border: 3rpx solid currentColor;
  border-radius: 6rpx;
  position: absolute;
  top: 22%;
  left: 15%;
}
.icon-album .album-mountain {
  position: absolute;
  bottom: 30%;
  left: 22%;
  width: 0;
  height: 0;
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  border-bottom: 18rpx solid currentColor;
}
.icon-album .album-sun {
  width: 14rpx;
  height: 14rpx;
  background: currentColor;
  border-radius: 50%;
  position: absolute;
  top: 32%;
  right: 22%;
}

/* 勾选图标 */
.icon-check .check-mark {
  width: 28%;
  height: 48%;
  border-right: 4rpx solid currentColor;
  border-bottom: 4rpx solid currentColor;
  transform: rotate(45deg);
  position: absolute;
  top: 22%;
  left: 36%;
}

/* 保存图标 */
.icon-save .save-arrow {
  width: 4rpx;
  height: 35%;
  background: currentColor;
  position: absolute;
  top: 18%;
  left: 50%;
  transform: translateX(-50%);
}
.icon-save .save-arrow::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 12rpx solid currentColor;
}
.icon-save .save-line {
  width: 60%;
  height: 3rpx;
  background: currentColor;
  position: absolute;
  bottom: 22%;
  left: 20%;
  border-radius: 2rpx;
}

/* 用户图标 */
.icon-user .user-head {
  width: 36%;
  height: 36%;
  border: 3rpx solid currentColor;
  border-radius: 50%;
  position: absolute;
  top: 12%;
  left: 32%;
}
.icon-user .user-body {
  width: 55%;
  height: 28%;
  border: 3rpx solid currentColor;
  border-radius: 50% 50% 0 0;
  border-bottom: none;
  position: absolute;
  bottom: 15%;
  left: 22%;
}

/* 店铺图标 */
.icon-store .store-roof {
  width: 0;
  height: 0;
  border-left: 22rpx solid transparent;
  border-right: 22rpx solid transparent;
  border-bottom: 16rpx solid currentColor;
  position: absolute;
  top: 15%;
  left: 50%;
  transform: translateX(-50%);
}
.icon-store .store-body {
  width: 55%;
  height: 38%;
  border: 3rpx solid currentColor;
  position: absolute;
  bottom: 15%;
  left: 22%;
}

/* 分享图标 */
.icon-share .share-circle {
  width: 50%;
  height: 50%;
  border: 3rpx solid currentColor;
  border-radius: 50%;
  position: absolute;
  top: 15%;
  left: 25%;
}
.icon-share .share-arrow {
  width: 4rpx;
  height: 40%;
  background: currentColor;
  position: absolute;
  top: 35%;
  left: 50%;
  transform: translateX(-50%);
}
.icon-share .share-arrow::after {
  content: '';
  position: absolute;
  top: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 10rpx solid currentColor;
}

/* 加载图标 */
.icon-loading .loading-circle {
  width: 70%;
  height: 70%;
  border: 4rpx solid rgba(255,255,255,0.2);
  border-top-color: currentColor;
  border-radius: 50%;
  position: absolute;
  top: 15%;
  left: 15%;
  animation: icon-spin 0.8s linear infinite;
}

@keyframes icon-spin {
  to { transform: rotate(360deg); }
}

/* 魔法棒图标 */
.icon-magic .magic-wand {
  width: 60%;
  height: 8rpx;
  background: currentColor;
  position: absolute;
  top: 50%;
  left: 20%;
  transform: rotate(-45deg);
  border-radius: 4rpx;
}
.icon-magic .magic-star {
  width: 8rpx;
  height: 8rpx;
  background: currentColor;
  position: absolute;
  border-radius: 2rpx;
}
.icon-magic .magic-star-1 {
  top: 20%;
  right: 25%;
}
.icon-magic .magic-star-2 {
  top: 30%;
  right: 15%;
}

/* 提示图标 */
.icon-tip .tip-circle {
  width: 60%;
  height: 60%;
  border: 3rpx solid currentColor;
  border-radius: 50%;
  position: absolute;
  top: 20%;
  left: 20%;
}
.icon-tip .tip-line {
  width: 4rpx;
  height: 22%;
  background: currentColor;
  position: absolute;
  top: 35%;
  left: 50%;
  transform: translateX(-50%);
}
.icon-tip .tip-dot {
  width: 6rpx;
  height: 6rpx;
  background: currentColor;
  border-radius: 50%;
  position: absolute;
  bottom: 30%;
  left: 50%;
  transform: translateX(-50%);
}

/* 衣服图标 */
.icon-clothes .clothes-shape {
  width: 70%;
  height: 55%;
  border: 3rpx solid currentColor;
  position: absolute;
  bottom: 18%;
  left: 15%;
  border-radius: 4rpx 4rpx 6rpx 6rpx;
}
.icon-clothes .clothes-shape::before {
  content: '';
  position: absolute;
  top: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 20rpx;
  height: 10rpx;
  border: 3rpx solid currentColor;
  border-bottom: none;
  border-radius: 10rpx 10rpx 0 0;
}

/* 对比图标 */
.icon-compare .compare-left {
  width: 35%;
  height: 60%;
  background: currentColor;
  opacity: 0.4;
  position: absolute;
  top: 20%;
  left: 15%;
  border-radius: 4rpx 0 0 4rpx;
}
.icon-compare .compare-right {
  width: 35%;
  height: 60%;
  background: currentColor;
  position: absolute;
  top: 20%;
  right: 15%;
  border-radius: 0 4rpx 4rpx 0;
}
.icon-compare .compare-line {
  width: 3rpx;
  height: 70%;
  background: currentColor;
  position: absolute;
  top: 15%;
  left: 50%;
  transform: translateX(-50%);
}

/* 商品/包裹图标 */
.icon-package .package-box {
  width: 60%;
  height: 50%;
  border: 3rpx solid currentColor;
  position: absolute;
  top: 30%;
  left: 20%;
  border-radius: 4rpx;
}
.icon-package .package-box::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 3rpx;
  background: currentColor;
  top: 50%;
}
.icon-package .package-box::after {
  content: '';
  position: absolute;
  width: 3rpx;
  height: 50%;
  background: currentColor;
  left: 50%;
  transform: translateX(-50%);
}

/* 分类图标 */
.icon-category .category-grid {
  width: 60%;
  height: 60%;
  position: absolute;
  top: 20%;
  left: 20%;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15%;
}
.icon-category .category-grid::before,
.icon-category .category-grid::after {
  content: '';
  background: currentColor;
  border-radius: 4rpx;
}

/* 图片图标 */
.icon-image .image-frame {
  width: 60%;
  height: 50%;
  border: 3rpx solid currentColor;
  position: absolute;
  top: 25%;
  left: 20%;
  border-radius: 4rpx;
}

/* 设置图标 */
.icon-setting .setting-gear {
  width: 50%;
  height: 50%;
  border: 3rpx solid currentColor;
  border-radius: 50%;
  position: absolute;
  top: 25%;
  left: 25%;
}

/* 加号图标 */
.icon-plus .plus-h,
.icon-plus .plus-v {
  background: currentColor;
  position: absolute;
  border-radius: 2rpx;
}
.icon-plus .plus-h {
  width: 50%;
  height: 3rpx;
  top: 50%;
  left: 25%;
  transform: translateY(-50%);
}
.icon-plus .plus-v {
  width: 3rpx;
  height: 50%;
  top: 25%;
  left: 50%;
  transform: translateX(-50%);
}

/* 编辑图标 */
.icon-edit .edit-pencil {
  width: 50%;
  height: 8rpx;
  background: currentColor;
  position: absolute;
  top: 40%;
  left: 25%;
  transform: rotate(-45deg);
  border-radius: 2rpx;
}

/* 删除图标 */
.icon-delete .delete-can {
  width: 40%;
  height: 50%;
  border: 3rpx solid currentColor;
  position: absolute;
  top: 30%;
  left: 30%;
  border-radius: 0 0 4rpx 4rpx;
}

/* 二维码图标 */
.icon-qrcode .qr-pattern {
  width: 50%;
  height: 50%;
  border: 3rpx solid currentColor;
  position: absolute;
  top: 25%;
  left: 25%;
}

/* 眼睛图标 */
.icon-eye .eye-shape {
  width: 60%;
  height: 35%;
  border: 3rpx solid currentColor;
  border-radius: 50%;
  position: absolute;
  top: 32%;
  left: 20%;
}

/* 链接图标 */
.icon-link .link-chain {
  width: 20%;
  height: 40%;
  border: 3rpx solid currentColor;
  border-radius: 20rpx;
  position: absolute;
  top: 30%;
  left: 40%;
}

/* 复制图标 */
.icon-copy .copy-docs {
  width: 40%;
  height: 50%;
  border: 3rpx solid currentColor;
  position: absolute;
  top: 30%;
  left: 25%;
  border-radius: 4rpx;
}
.icon-copy .copy-docs::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border: 3rpx solid currentColor;
  border-radius: 4rpx;
  top: -20%;
  left: 20%;
}

/* 关闭图标 */
.icon-close .close-x {
  width: 50%;
  height: 3rpx;
  background: currentColor;
  position: absolute;
  top: 50%;
  left: 25%;
  transform: rotate(45deg);
}
.icon-close .close-x::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: currentColor;
  transform: rotate(90deg);
}

/* 帮助图标 */
.icon-help .help-circle {
  width: 60%;
  height: 60%;
  border: 3rpx solid currentColor;
  border-radius: 50%;
  position: absolute;
  top: 20%;
  left: 20%;
}
.icon-help .help-mark {
  width: 3rpx;
  height: 20%;
  background: currentColor;
  position: absolute;
  top: 35%;
  left: 50%;
  transform: translateX(-50%);
}
